{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <h2>Required tests</h2>
    </div>
    <br/>
    <div class="row">
        {% for test in tests %}
            <div class="col-4">
                <div class="card" style="">
                    <div class="card-body">
                        <h5 class="card-title">{{ test.test.title }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text"></p>
                        {#<a href="#" class="card-link">Another link</a>#}
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for technicalComponent in test.requiredComponents %}
                            <li class="list-group-item">Required Component: <b>{{ technicalComponent.name }}</b></li>
                            <li class="list-group-item">Required Time: <b>{{ technicalComponent.requiredHours }}</b>
                            </li>
                            <li class="list-group-item">Spend Time:
                                <b>{{ technicalComponent.spendHours|round(2, 'floor') }}</b></li>

                        {% endfor %}
                        <li class="list-group-item">
                            Passed: {% if test.passed %}<span
                                    class="badge badge-success">Passed</span>{% else %}<span
                                    class="badge badge-secondary">Not Passed</span>{% endif %}</li>
                    </ul>

                    <div class="card-body">
                        <a href="{{ test.test.link }}" class="card-link">Get Test</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <hr>
    <div class="row">
        <h2>Effective time required</h2>
    </div>
    <div class="row">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">All effective time</h5>
                <h6 class="card-subtitle mb-2 text-muted"></h6>
                <p class="card-text">Это сколько эффективного времени нужно получиь что-бы получить повышение</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Required time: <b>{{ effectiveTime.requiredTime }}</b></li>
                    <li class="list-group-item">Spend time: <b>{{ effectiveTime.spendEffectiveTime }}</b>
                    </li>
                    <li class="list-group-item">
                        Passed: {% if effectiveTime.passed %}<span
                                class="badge badge-success">Passed</span>{% else %}<span
                                class="badge badge-secondary">Not Passed</span>{% endif %}</li>
                </ul>
                <a href="{{ path('php_developer_salary_raise') }}" class="card-link">Details</a>
                {#<a href="#" class="card-link">Another link</a>#}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

