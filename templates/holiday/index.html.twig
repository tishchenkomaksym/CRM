{% extends 'holiday/teamplate.twig' %}

{% block title %}Holiday index{% endblock %}

{% block body %}
    <h1>Holiday index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Date</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for holiday in holidays %}
            <tr>
                <td>{{ holiday.id }}</td>
                <td>{{ holiday.title }}</td>
                <td>{{ holiday.date ? holiday.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('holiday_show', {'id': holiday.id}) }}">show</a>
                    <a href="{{ path('holiday_edit', {'id': holiday.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('holiday_new') }}">Create new</a>
{% endblock %}
