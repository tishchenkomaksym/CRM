{% extends 'base.html.twig' %}

{% block title %}SalaryReportInfo index{% endblock %}

{% block body %}
    <h1>SalaryReportInfo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreateDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salary_report_info in salary_report_infos %}
            <tr>
                <td>{{ salary_report_info.id }}</td>
                <td>{{ salary_report_info.createDate ? salary_report_info.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {% if next_salary_report != null %}
                        <a href="{{ path('salary_report_info_show', {'id': salary_report_info.id}) }}">show</a>
                        <a href="{{ path('salary_report_info_edit', {'id': salary_report_info.id}) }}">edit</a>
                    {% else %}
                        <span>
                            Please, add next reporting day
                        </span>
                    {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('salary_report_info_new') }}">Create new</a>
{% endblock %}
