{% extends 'sdt/teamplate.twig' %}

{% block title %}Sdt{% endblock %}

{% block body %}
    <h1>Sdt</h1>

    <table class="table">
        <tbody>
        <tr>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>{{ sdt.createDate ? sdt.createDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>{{ sdt.createDate ? sdt.createDate|date_modify('+'~sdt.count~' weekdays')|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Days Count</th>
            <td>{{ sdt.count }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row">
        <a href="{{ path('sdt_edit', {'id': sdt.id}) }}" class="btn btn-primary">edit</a>
        <a href="{{ path('sdt_index') }}" class="btn btn-secondary">back to list</a>
        {{ include('sdt/_delete_form.html.twig') }}
    </div>
{% endblock %}
