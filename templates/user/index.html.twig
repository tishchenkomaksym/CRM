{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <div>
        <a class="btn btn-primary" href="{{ path('user_new') }}">Create new</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Full name</th>
            <th>Position</th>
            <th>Team</th>
            <th>Office</th>
            <th>Work Email</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {% if user.photo != null %}
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">
                            <img width="200px" height="200px" class="img-fluid " src="/uploads/{{ user.photo }}" alt="Photo">
                        </a>
                    </td>
                {% else %}
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">
                            <img width="200px" height="200px" class="img-fluid" src="{{ asset('images/noPhoto.png') }}" alt="Photo">
                        </a>
                    </td>
                {% endif %}
                <td>{{ user.user.name }}</td>
                <td>{{ user.position }}</td>
                <td>{{ user.user.team.name }}</td>
                <td>{{ user.user.team.department.office.name }}</td>
                <td>{{ user.user.email }}</td>
{#                <td><a href="{{ path('sdt_email_assignee_index',{'id':user.id}) }}">show</a></td>#}
{#                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>#}
{#                <td>#}
{#                    <a href="{{ path('user_show', {'id': user.user.id}) }}">show</a>#}
{#                </td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
